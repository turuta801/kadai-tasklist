<%= form_with(model: task, local: true) do |f| %>

  
<% if task.errors.any? %>

    <div id="error_explanation">
      <ul>
        
<% task.errors.full_messages.each do |msg| %>

          <li>
<%= msg %>
</li>
        
<% end %>

      </ul>
    </div>
  
<% end %>

<%= f.label :status, 'タスク名' %>

  
<%= f.text_field :status %>


  
<%= f.label :content, '詳細' %>

  
<%= f.text_field :content %>


  
<%= f.submit '投稿' %>

<% end %>